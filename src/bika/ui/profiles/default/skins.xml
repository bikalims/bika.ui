<?xml version="1.0"?>
<object name="portal_skins" meta_type="Plone Skins Tool" allow_any="False"
        cookie_persistence="False" default_skin="Plone Default"
        request_varname="plone_skin">

  <!-- bika_ui images -->
  <object name="bika_ui_images" meta_type="Filesystem Directory View"
          directory="bika_ui.core:skins/bika_ui_images"/>

  <!-- bika_ui templates -->
  <object name="bika_ui_templates" meta_type="Filesystem Directory View"
          directory="bika_ui.core:skins/bika_ui_templates"/>

  <!-- bika_ui scripts -->
  <object name="bika_ui_scripts" meta_type="Filesystem Directory View"
          directory="bika_ui.core:skins/bika_ui_scripts"/>

  <skin-path name="*">
    <layer name="bika_ui_images" insert-after="custom"/>
    <layer name="bika_ui_templates" insert-after="bika_ui_images"/>
    <layer name="bika_ui_scripts" insert-after="bika_ui_templates"/>
  </skin-path>

</object>
